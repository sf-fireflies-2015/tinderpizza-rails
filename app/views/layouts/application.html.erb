<html>
<head>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<link rel="icon" 
      type="image/ico" 
      href="/images/tinderpizza.ico" />

<title>Tinder Pizza</title>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo hide-on-med-and-down">Tinder Pizza</a>
      <ul id="nav-mobile" class="right">
        <li><a href="/pizzas">All Pizzas</a></li>
        <li><a href="/about_us">About</a></li>
        <% if true || auth_logged_in? %>
          <li><a href="/logout">Logout</a></li>
        <% else %>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        <% end %>
      </ul>
    </div>
  </nav>


<div class="row">
  <%= yield %>
</div>


<footer class="page-footer">
    <div class="footer-copyright">
      <div class="container">
      Â© 2015 Copyright SF Fireflies
      <a class="grey-text text-lighten-4 right" href="https://github.com/sf-fireflies-2015">SF Fireflies 2015</a>
      </div>
    </div>
  </footer>

  <%  unless flash[:message].nil?  %>
    <script> Materialize.toast('<%= flash[:message].gsub("'", "\\'") %>', 4000) // 4000 is the duration of the toast
  </script>
  <% end %>

</body>
</html>