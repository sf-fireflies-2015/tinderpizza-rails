
<!--form class="col s12" action="<%= pizza.id.nil? ? '/pizzas' : "/pizzas/#{pizza.id}" %>" method="post"-->
<%= form_for pizza, class: "col s12" do |f| %>
  <div class="row">
<% if pizza.errors[:name].any? %>
    <div style="color: red;"><%= pizza.errors[:name].first %></div>
<% end %>
    <div class="input-field col s12">
      <%= f.text_field :name %>
      <label for="name">Name</label>
    </div>
  </div>   


  <div class="row">
<% if pizza.errors[:diameter].any? %>
    <div style="color: red;"><%= pizza.errors[:diameter].first %></div>
<% end %>
    <div class="input-field col s12">
      <%= f.text_field :diameter %>
      <label for="diameter">Diameter</label>
    </div>
  </div>   


  <div class="row">
<% if pizza.errors[:price].any? %>
    <div style="color: red;"><%= pizza.errors[:price].first %></div>
<% end %>
    <div class="input-field col s12">
      <%= f.text_field :price %>
      <label for="price">Price</label>
    </div>
  </div>   

  <input class="btn" type="submit" name="action" value="<%= pizza.id.nil? ? 'Add' : 'Save' %>"/>
<% end %>